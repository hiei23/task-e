<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="field">
        <%= f.label :task_name ,:class=>"newTaskLabel"%><br>
        <%= f.text_field :task_name %>
      </div>
      <div class="field">
        <%= f.label :due_date ,:class=>"newTaskLabel"%><br>
        <%= f.datetime_select :due_date %>
      </div>
      <div class="field">
        <%= f.label :weight,:class=>"newTaskLabel" %><br>
        <%= f.number_field :weight %>
      </div>
      <div class="field">
        <%= f.label :progress,:class=>"newTaskLabel" %><br>
        <%= f.number_field :progress %>
      </div>
      <div class="field">
        <%= f.hidden_field :priority, :value => 0 %>
      </div>
      <div class="field">
        <%= f.label :required_time,:class=>"newTaskLabel" %><br>
        <%= f.number_field :required_time %>
      </div>
      <div class="field">
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
      <div class="field">
        <%= f.label :tag ,:class=>"newTaskLabel"%><br>
        <%= f.text_field :tag %>
      </div>
      <div class="actions">
        <%= f.submit "Create Task",:class => "button"  %>
      </div>
    </div>

<% end %>
